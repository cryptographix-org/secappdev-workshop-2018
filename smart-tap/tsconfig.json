{
  "compilerOptions": {
    "target": "es2016",
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [ "es2015", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/native-modules"
  },
  "include": [
   "./types/index.d.ts",
    "src/**/*",
    "libs/**/*"
  ],
  "exclude": [
    "dist",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
